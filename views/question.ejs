<!DOCTYPE html>
<html>
<%- include("partials/header") %>

<body>

    <%- include("partials/navbar") %>

    <br>
    <div class="container bg-white">

        <div class="card-header">
            <h2> <%= question.title %> </h2>
        </div>
        <div class="card-body">
            <p> <%= question.description %> </p>
        </div>
        <div class="card-footer">
            <form action="/save-answer" method="POST">
                <label for="answer">Resposta:</label>
                <textarea class="form-control" placeholder="Digite sua resposta" name="answer"></textarea>
                <input type="number" name="id" hidden value="<%= question.id %>">
                <br>
                <button type="submit" class="btn btn-info">Responder</button>
                <br>
            </form>
            <hr>

            <h3>Respostas</h3>

            <% answers.forEach(answer => { %>

            <hr>
            <p> <%= answer.body %> </p>

            <% }); %>

        </div>
    </div>
    <br>

    <%- include("partials/scripts") %>

</body>

</html>